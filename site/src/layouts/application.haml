!!!
%html
  %head
    %title Bluff: Beautiful graphs in JavaScript
    = stylesheets
    = javascripts 'js-class', 'bluff', 'excanvas'
  %body
    #header
      .sub
        %h1
          =link 'Bluff', '/'
          %span Beautiful graphs in JavaScript
        %ul#navigation
          %li
            %a{:href => '/assets/Bluff.0-3-5.zip', :onclick => "trackDownload('0.3.5')"}
              Download v0.3.5
          %li
            =link 'API reference', '/api.html'
    #main
      .sub
        = yield
    #footer
      .sub
        :textile
          @Bluff@, &copy; 2008&ndash;2009 "James Coglan":http://blog.jcoglan.com. Released under the MIT license.
    
  %script{:type => 'text/javascript'}
    :plain
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
  %script{:type => 'text/javascript'}
    :plain
      isLocal = !!( /localhost|192\.168/i.test(window.location.href) );
      if (!isLocal) {
        var pageTracker = _gat._getTracker("UA-873493-5");
        pageTracker._initData();
        pageTracker._trackPageview();
      }
      trackDownload = function(version) {
        if (!isLocal) pageTracker._trackPageview('/download/' + version + '/');
        return true;
      };
